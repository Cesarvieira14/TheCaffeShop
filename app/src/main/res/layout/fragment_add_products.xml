<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">




    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".ui.adminProducts.AddProductsFragment">

        <EditText
            android:id="@+id/edit_product_title"
            style="@style/TextAppearance.Material3.HeadlineLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="Product_title" />

        <EditText
            android:id="@+id/edit_product_description"
            style="@style/TextAppearance.Material3.BodyMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:hint="Product_description" />

        <EditText
            android:id="@+id/edit_product_image"
            style="@style/TextAppearance.Material3.BodyMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:hint="Product_image" />


        <EditText
            android:id="@+id/edit_product_price"
            style="@style/TextAppearance.Material3.BodyMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:hint="Product_price" />

        <Switch
            android:id="@+id/edit_product_availability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Avaiable"
            android:layout_marginBottom="10dp"
            />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/product_add_product"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_product"
            android:textSize="14sp" />


    </LinearLayout>
</ScrollView>